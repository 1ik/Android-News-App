<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:panelHeight="0dp"
        sothree:shadowHeight="4dp"
        sothree:paralaxOffset="100dp"
        sothree:dragView="@+id/dragView">

        <!--MAIN CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/content_frame"  >

            </FrameLayout>
        </LinearLayout>
        <!-- MAIN CONTENT -->


        <!--sliding contents-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#fff"
            android:orientation="vertical"
            android:clickable="true"
            android:weightSum="9"
            android:focusable="false"
            android:id="@+id/dragView">

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                >

                <ImageView
                    android:id="@+id/settings_image_load"
                    android:src="@drawable/ic_img_load_inactive"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:onClick="toggleSettingsClicked"
                    />
                <ImageView
                    android:id="@+id/settings_choose_weather_location"
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_weather"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:id="@+id/settings_language"
                    android:src="@drawable/ic_lang_english"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_about"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/settings_about_dev"
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_developer"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_share"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.333"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_help"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.333"
                    android:layout_height="wrap_content" />
                <!--
                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_twiiter"
                    android:layout_width="0dp"
                    android:layout_weight="0.333"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:onClick="toggleSettingsClicked"
                    android:src="@drawable/ic_twiiter"
                    android:layout_width="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.333"
                    android:layout_height="wrap_content" />
                -->
            </LinearLayout>
        </LinearLayout>
        <!-- sliding contents -->


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>


    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="630dp"
        android:minHeight="48dp"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_gravity="left"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/nav_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <!--weather part-->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:id="@+id/weatehr_frame"  >
        </FrameLayout>
        <!--weather part-->

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
