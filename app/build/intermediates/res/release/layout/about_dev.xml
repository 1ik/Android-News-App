<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/Platinum"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:background="#1e9bdd"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/fsdf">

        <ImageView
            android:id="@+id/dev_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/pixelizard"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PixeLizard Interactives"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/dev_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhaka, Bangladesh"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:layout_below="@+id/textView"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_pixelizard"
            android:textColor="@color/Black"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:id="@+id/textView3" />



        <TextView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call us: "
            android:textColor="@color/Black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/call_option"
            android:clickable="true"
            android:onClick="contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+8801932 986 985"
            android:textColor="@color/Blue"
            android:layout_toEndOf="@+id/call"
            android:layout_toRightOf="@+id/call"
            android:layout_alignTop="@+id/call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email us: "
            android:textColor="@color/Black"
            android:onClick="contact"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/call"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/email" />

        <TextView
            android:onClick="contact"
            android:clickable="true"
            android:id="@+id/email_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info@pixelizard.com"
            android:textColor="@color/Blue"
            android:layout_toEndOf="@+id/email"
            android:layout_alignTop="@+id/email"
            android:layout_toRightOf="@+id/email" />

        <TextView

            android:onClick="contact"
            android:clickable="true"
            android:id="@+id/web_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://www.pixelizard.com"
            android:textColor="@color/Blue"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="67dp" />
    </RelativeLayout>




</LinearLayout><!-- From: file:/Users/anik/Documents/Projects/android/Banglanews24/MyApplication/app/src/main/res/layout/about_dev.xml -->