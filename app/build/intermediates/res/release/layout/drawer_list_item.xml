<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:background="#fff" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/drawer_list_icon" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:minHeight="40dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/unread_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"

        android:layout_marginLeft="12dp"
        android:minHeight="48dp"
        android:textColor="#000"
        android:text="(3)"
        android:textSize="14sp" />

</LinearLayout><!-- From: file:/Users/anik/Documents/Projects/android/Banglanews24/MyApplication/app/src/main/res/layout/drawer_list_item.xml -->